@model IEnumerable<Kooliprojekt.Models.CarModels.CarListItemModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LicencePlate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KmFare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeFare)
            </th>
