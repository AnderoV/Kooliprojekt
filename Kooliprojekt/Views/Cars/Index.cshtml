                @Html.DisplayNameFor(model => model.Pictures)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LicencePlate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KmFare)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeFare)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarModel.Mark)
            </td>
