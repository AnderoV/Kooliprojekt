@model Kooliprojekt.Models.BookingModels.BookingEditModel

@{
    ViewData["Title"] = "Book";
}

<h1>Book</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Book">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.Start != DateTime.MinValue)
            {
                <p> car is being booked</p>

            }
            else
            {
                <div class="row">
                    <p>Click create to start booking</p>
                </div>
                <div class="form-group">
                    <input type="submit" value="Book" class="btn btn-default" />
                    <input type="hidden" asp-for="CarId" />
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
